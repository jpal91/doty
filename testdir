#!/bin/bash

if [ -d /tmp/dotytest ]; then
    rm -rf /tmp/dotytest
fi

mkdir /tmp/dotytest

for f in $(ls -A $HOME);
do
    if [ -f $HOME/$f ]; then
        cp $HOME/$f /tmp/dotytest
    fi
done

mkdir /tmp/dotytest/dotfiles
# cp $HOME/dotfiles/.dotyrc /tmp/dotytest/dotfiles
if [ -z "$CODESPACES" ]; then
    cp $HOME/dev/doty/dotycfg.yml /tmp/dotytest/dotfiles
    cp $HOME/dev/doty/doty.lock /tmp/dotytest/dotfiles
    cp $HOME/.ssh /tmp/dotytest -r
else
    cp /workspaces/doty/dotycfg.yml /tmp/dotytest/dotfiles
    cp /workspaces/doty/doty.lock /tmp/dotytest/dotfiles
fi